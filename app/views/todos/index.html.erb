<h1>Your to-do list:</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Notes</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @todos.each do |todo| %>
			<tr>
				<td><%= todo.title %></td>
				<td><%= todo.notes %></td>
				<td><%= link_to 'Show', todo %></td>
				<td><%= link_to 'Edit', edit_todo_path(todo) %></td>
				<td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New to-do item", new_todo_path, class: "button-new" %>